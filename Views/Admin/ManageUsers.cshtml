@model IEnumerable<PMS.Models.AppUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Manage Users</h2>

    <!-- Add User Button -->
    <button class="btn btn-success mb-3" onclick="openAddUserModal()">‚ûï Add New User</button>

    <!-- Users Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.ContactNo</td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="openEditUserModal(@user.Id)">‚úè Edit</button>
                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(@user.Id)">üóë Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="userModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="userModalBody">
        <!-- Partial form will load here -->
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <!-- jQuery + Bootstrap Bundle (Required for modal + load) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function openAddUserModal() {
            $("#userModalLabel").text("Add New User");
            $("#userModalBody").load("/Admin/Create", function () {
                $("#userModal").modal("show");
            });
        }

        function openEditUserModal(id) {
            $("#userModalLabel").text("Edit User");
            $("#userModalBody").load("/Admin/Edit/" + id, function () {
                $("#userModal").modal("show");  
            });
        }

        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this user?")) {
                window.location.href = "/Admin/Delete/" + id;
            }
        }
    </script>
}
