@model IEnumerable<PMS.Models.AppUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Users</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Contact</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var u in Model)
    {
        <tr>
            <td>@u.FullName</td>
            <td>@u.Email</td>
            <td>@u.Role</td>
            <td>@u.ContactNo</td>
            <td>@u.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                <form asp-action="Delete" method="post" style="display:inline;" 
                  onsubmit="return confirm('Are you sure you want to delete @u.FullName (@u.Email)?');">
                <input type="hidden" name="id" value="@u.Id" />
                <button type="submit" class="btn btn-danger btn-sm">ðŸ—‘ Delete</button>
            </form>

            </td>
        </tr>
    }
    </tbody>
</table>
