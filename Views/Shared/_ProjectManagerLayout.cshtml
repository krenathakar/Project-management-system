<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }
        .dashboard-container {
            display: flex;
            height: 100vh;
        }
        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #ffffff;
            border-right: 1px solid #ddd;
            padding: 20px;
        }
        .sidebar h4 {
            margin-bottom: 30px;
            font-weight: bold;
            color: #333;
        }
        .sidebar a {
            display: block;
            color: #333;
            padding: 12px;
            text-decoration: none;
            border-radius: 6px;
            margin-bottom: 10px;
            transition: all 0.2s ease-in-out;
        }
        .sidebar a:hover {
            background: #f1f1f1;
            color: #007bff;
        }
        /* Top Navbar */
        .topbar {
            height: 70px;
            background: #fff;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }
        .topbar .search-box {
            flex-grow: 1;
            margin: 0 20px;
        }
        .search-box input {
            width: 100%;
            padding: 8px 14px;
            border-radius: 30px;
            border: 1px solid #ccc;
        }
        .topbar .right-section {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .notification {
            position: relative;
            font-size: 20px;
            cursor: pointer;
        }
        .notification .badge {
            position: absolute;
            top: -6px;
            right: -10px;
            background: red;
            color: white;
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 50%;
        }
        .profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .profile .avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #007bff;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        /* Content */
        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .main-content {
            padding: 30px;
            background: #f8f9fa;
            flex-grow: 1;
            overflow-y: auto;
        }
        .card-custom {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            padding: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4>PMS - Project Management System</h4>
            <a asp-controller="Home" asp-action="Index">üìä Dashboard</a>
            <a asp-controller="Projects" asp-action="Index">üìÅ Projects</a>
            <a href="#">üìù Tasks</a>
            <a href="#">üë• Team</a>
            <a href="#">üìà Reports</a>
            <a href="#">‚öô Settings</a>
            <a asp-controller="Account" asp-action="Logout">üö™ Logout</a>
        </div>
     
        <!-- Main Content -->
        <div class="content">
            <!-- Topbar -->
            <div class="topbar">
                <div class="search-box">
                    <input type="text" placeholder="üîç Search projects, tasks, or team members...">
                </div>
                <div class="right-section">
                    <div class="notification">
                        üîî
                        <span class="badge">2</span>
                    </div>
                    <div class="profile">
                        <div class="avatar">JD</div>
                        <div>
                            <div><strong>@User.Identity?.Name</strong></div>
                            <small>Project Manager</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="main-content">
                <div class="card-custom">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- ‚úÖ Corrected Script Paths -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
    // EDIT PROJECT
    $(document).on("submit", "#editProjectForm", function (e) {
        e.preventDefault();

        $.ajax({
            url: $(this).attr("action"),
            type: "POST",
            data: $(this).serialize(),
            success: function (response) {
                if (response.success) {
                    alert("Project updated successfully!");
                    $("#projectModal").modal("hide");
                    location.reload();
                } else {
                    alert("Error: " + response.errors.join(", "));
                }
            }
        });
    });

    // DELETE PROJECT
    function deleteProject(id) {
        if (confirm("Are you sure you want to delete this project?")) {
            $.ajax({
                url: "/Projects/Delete",
                type: "POST",
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        alert("Project deleted successfully!");
                        location.reload();
                    } else {
                        alert("Error deleting project.");
                    }
                }
            });
        }
    }
    </script>
</body>
</html>
