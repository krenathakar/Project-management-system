@{
    ViewData["Title"] = "Home Page";
    
}

@{
    ViewData["Title"] = "Project Management System";
}

<link href="~/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        color: white;
        padding: 80px 20px;
        text-align: center;
    }
    .hero h1 {
        font-size: 3rem;
        font-weight: bold;
    }
    .hero p {
        font-size: 1.2rem;
        margin-top: 10px;
    }

    /* Feature Cards */
    .feature-card {
        transition: transform 0.3s ease;
    }
    .feature-card:hover {
        transform: translateY(-5px);
    }

    /* Footer */
    footer {
        background: #222;
        color: #bbb;
        padding: 20px 0;
        text-align: center;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Welcome to Project Management System</h1>
        <p>Organize projects, assign tasks, and boost productivity.</p>
        <a href="/Account/Login" class="btn btn-light btn-lg mt-3">Get Started</a>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose PMS?</h2>
            <p class="text-muted">Manage all your projects in one place</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-kanban fs-1 text-primary"></i>
                        <h5 class="mt-3">Task Management</h5>
                        <p class="text-muted">Assign, track, and complete tasks with ease.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1 text-primary"></i>
                        <h5 class="mt-3">Team Collaboration</h5>
                        <p class="text-muted">Work together efficiently and share updates in real-time.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-bar-chart fs-1 text-primary"></i>
                        <h5 class="mt-3">Progress Tracking</h5>
                        <p class="text-muted">Monitor project milestones and deadlines easily.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h3 class="fw-bold">Ready to streamline your workflow?</h3>
        <p class="text-muted">Sign up today and manage your projects like a pro.</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Create Account</a>
    </div>
</section>

<!-- Footer -->
<footer>
    <div class="container">
        <p>© 2025 Project Management System | Built with ❤️</p>
    </div>
</footer>


