@model PMS.ViewModels.ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password - PMS";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary fw-bold">Forgot Password</h3>
                    <p class="text-muted text-center">Enter your registered email to reset password</p>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-group mb-3">
                            <label>Email *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="demo@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <p class="text-muted text-center">
    Enter your registered email. A reset link will be shown here.
</p>

                        </div>
                        <button type="submit" class="btn btn-success w-100">Send Reset Link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
