@model PMS.ViewModels.LoginVM
@{
    ViewData["Title"] = "Sign in to PMS";
    
}
<link href="~/css/login.css" rel="stylesheet" />



<div class="container-fluid login-container">
    <div class="row">
        <!-- Left side with image -->
        <div class="col-md-6 login-left d-flex align-items-center justify-content-center">
            <div class="overlay-text text-center">
                <h1 class="fw-bold">Project Management System</h1>
                <p>Streamline your workflow and boost productivity</p>
            </div>
        </div>

        <!-- Right side -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div>@ViewBag.Message</div>
}
        <div class="col-md-6 login-right d-flex align-items-center justify-content-center">
            <div class="login-form">

                <h3 class="mb-3">Sign in to PMS</h3>
                <p class="text-muted">Manage your projects and tasks efficiently</p>

                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label>Email address *</label>
                        <input asp-for="Email" class="form-control" placeholder="demo@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>Password *</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                     <!-- New Role dropdown -->
                    <div class="form-group mb-3">
                        <label>Role *</label>
                        <select asp-for="Role" class="form-select">
                            <option value="">-- Select Role --</option>
                            <option value="ProjectManager">ProjectManager</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign in</button>

                </form>
                <!-- Forgot Password -->
<div class="text-center mt-3">
    <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
</div>
                
<!-- The “New user?” link you wanted -->
<p>New user? <a asp-controller="Account" asp-action="Register">Create an account</a></p>


            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
